
<html lang="pt-br">
<head>
    <link href="/your-path-to-fontawesome/css/fontawesome.css" rel="stylesheet">
    <link href="/your-path-to-fontawesome/css/brands.css" rel="stylesheet">
    <link href="/your-path-to-fontawesome/css/solid.css" rel="stylesheet">
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="~/css/style-login.css" />
    <script src="https://kit.fontawesome.com/cf6fa412bd.js" crossorigin="anonymous"></script>
</head>
<body>
    <div class="container">
        <div class="card">
            <div class="card-body">
                <form class="container-form">

                    <!-- Text input -->
                    <div class="form-group col-md-20">
                        <label class="control-label" for="user">Email</label>
                        <i class="fas fa-envelope"></i>
                        <input id="email" name="email" type="text" placeholder=" " class="form-control" required="">
                    </div>

                    <!-- Password input -->
                    <div class="form-group col-md-20">
                        <label class="control-label" for="password">Senha</label>
                        <i class="fas fa-lock"></i>
                        <input id="password" name="password" type="password" placeholder="" class="form-control" required="">
                    </div>

                    <!-- Checkbox -->
                    <div class="form-group">
                        <div class="checkbox">
                            <label for="lembrarsenha-0"> Lembrar Senha </label>
                            <input type="checkbox" name="lembrarsenha" id="lembrarsenha" value="1">
                        </div>
                    </div>

                    <!-- Button -->
                    <div class="form-group pt-5">
                        <button id="login" name="Entrar" class="btn btn-success col-6">Entrar</button>

                        <button id="btnSignup" name="Inscrever" class="btn btn-outline-secondary col-5 text-black">Inscrever-se</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script>
    $(document).ready(function () {
        $("#login").click(function (e) {
            e.preventDefault();

            // Obtenha os valores de email e senha
            var email = $("#email").val();
            var senha = $("#senha").val();
            debugger;
            // Simule uma requisição AJAX para verificar o login (substitua isso com sua lógica de servidor real)
            $.ajax({
                type: "POST",
                url: "/seu/servidor/login",
                data: { email: email, senha: senha },
                success: function (response) {
                    // Se a resposta do servidor indicar sucesso, redirecione para a página principal
                    if (response.success) {
                        window.location.href = "/index";
                    } else {
                        // Se não, exiba uma mensagem de erro
                        alert("Login falhou. Verifique suas credenciais.");
                    }
                },
                error: function () {
                    alert("Erro ao processar a solicitação.");
                }
            });
        });
    });
</script>